@model MultiPlug.Base.Http.EdgeApp

<section class="row-fluid">

    <div class="row-fluid">
        <div class="box">
            <div class="span3">
                <a style="line-height: 52px;" href="#"><img alt="Raspberry Pi Logo" src="@Raw(Model.Context.Paths.Assets)images/raspberry-pi.png"></a>
            </div>
            <div class="span6">
                <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">Raspberry Pi Configuration</p>
            </div>
            <div class="span3" style="text-align: right;">
                <button id="btn-save" form="formsave" type="submit" value="submit" style="height:54px; width:65px" class="item btn btn-green"><i class="icon-save icon-large"></i><p>Save</p></button>
            </div>
        </div>
    </div>

    @Include("MultiPlug.Ext.RasPi.Config.RaspPiConfig_Settings_Navigation")

    <form id="formsave" action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="box-header">Boot Options</h3>
                <div class="box">
                    <div class="row-fluid">
                        <div class="span6"><b>Desktop or CLI</b></div>
                        <div class="span6">
                            <select name="BootBehaviour">
                                <option value="0"></option>
                                <option value="1">Console</option>
                                <option value="2">Console with Autologin</option>
                                <option value="3">Desktop</option>
                                <option value="4">Desktop with Autologin</option>
                            </select>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6"><b>Wait for Network at Boot</b></div>
                        <div class="span6"><input type="checkbox" name="NetworkWait" value="true" @Raw(Model.Extension.Model.NetworkWait ? "checked=checked" : "")></div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6"><b>Splash Screen</b></div>
                        <div class="span6"><input type="checkbox" name="SplashScreen" value="true" @Raw(Model.Extension.Model.SplashScreen ? "checked=checked" : "")></div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6"><b>Boot Order</b></div>
                        <div class="span6">
                            <select name="BootOrder">
                                <option value="0"></option>
                                <option value="1">USB Boot</option>
                                <option value="2">Network Boot</option>
                            </select>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6"><b>Boot ROM Version</b></div>
                        <div class="span6">
                            <select name="BootROM">
                                <option value="0"></option>
                                <option value="1">Latest</option>
                                <option value="2">Default</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
