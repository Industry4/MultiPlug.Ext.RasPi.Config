@model MultiPlug.Base.Http.EdgeApp
@functions {
    public string isErrorMessage()
    {
        return Model.Extension.Model.Error ? "alert-error" : "alert-success";
    }
}

<section class="row-fluid">

    <div class="row-fluid">
        <div class="box">
            <div class="span3">
                <a style="line-height: 52px;" href="#"><img alt="Raspberry Pi Logo" src="@Raw(Model.Context.Paths.Assets)images/raspberry-pi.png"></a>
            </div>
            <div class="span6">
                <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">Raspberry Pi Configuration</p>
            </div>
            <div class="span3" style="text-align: right;">
                <button id="btn-save" form="formsave" type="submit" value="submit" style="height:54px; width:65px" class="item btn btn-green"><i class="icon-save icon-large"></i><p>Save</p></button>
            </div>
        </div>
    </div>

    @Include("MultiPlug.Ext.RasPi.Config.RaspPiConfig_Settings_Navigation")
@if (!Model.Extension.Model.NotSecure)
{
    <div class="row-fluid">
            <div class="alert">
                <a href="#" class="close" data-dismiss="alert">×</a>
                <strong>Caution:</strong> You are not running over a secure https connection. Passwords will be sent in the clear. Continue only if you trust the network!
            </div>
    </div>
}
    <form id="formsave" action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="box-header">Change User Password</h3>
                <div class="box">
                    <div class="row-fluid">
                        @if ( ! string.IsNullOrEmpty(Model.Extension.Model.Message))
                        {
                            <div class="alert @isErrorMessage()">
                                <a href="#" class="close" data-dismiss="alert">×</a>
                                <strong>@Model.Extension.Model.Message</strong>
                            </div>
                        }
                    </div>
                    <div class="row-fluid">
                        <div class="span6"><b>Username</b></div>
                        <div class="span6"><input name="Username" class="input-block-level" type="text" placeholder="Default Username is normally &#34;pi&#34;" value=""></div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6"><b>Existing Password</b></div>
                        <div class="span6"><input name="OldPassword" class="input-block-level" type="password" value=""></div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6"><b>New Password</b></div>
                        <div class="span6"><input name="NewPassword" class="input-block-level" type="password" value=""></div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6"><b>New Password</b></div>
                        <div class="span6"><input name="NewPasswordCheck" class="input-block-level" type="password" value=""></div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>