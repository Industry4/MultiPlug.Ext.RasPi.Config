@model MultiPlug.Base.Http.EdgeApp

<section class="row-fluid">

    <div class="row-fluid">
        <div class="box">
            <div class="span3">
                <a style="line-height: 52px;" href="#"><img alt="Raspberry Pi Logo" src="@Raw(Model.Context.Paths.Assets)images/raspberry-pi.png"></a>
            </div>
            <div class="span6">
                <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">Raspberry Pi Configuration</p>
            </div>
        </div>
    </div>

    @Include("MultiPlug.Ext.RasPi.Config.RaspPiConfig_Settings_Navigation")

    <div class="row-fluid">
        <div class="span12">
            <h3 class="box-header">Free Disk</h3>
            <div class="box">
                <div class="row-fluid">
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>
                                    File System
                                </th>
                                <th>
                                    Size
                                </th>
                                <th>
                                    Used
                                </th>
                                <th>
                                    Available
                                </th>
                                <th>
                                    % Used
                                </th>
                                <th>
                                    Mounted on
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Row in @Model.Extension.Model.FreeDisk)
                            {
                                <tr>
                                    @foreach (var Column in Row)
                                    {
                                        <td>@Raw(Column)</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span12">
            <h3 class="box-header">Free RAM</h3>
            <div class="box">
                <div class="row-fluid">
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>
                                    Type
                                </th>
                                <th>
                                    Total
                                </th>
                                <th>
                                    Used
                                </th>
                                <th>
                                    Free
                                </th>
                                <th>
                                    Shared
                                </th>
                                <th>
                                    Buff/Cache
                                </th>
                                <th>
                                    Available
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Row in @Model.Extension.Model.FreeRam)
                            {
                                <tr>
                                    @foreach (var Column in Row)
                                    {
                                        <td>@Raw(Column)</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</section>